<!-- src/main/resources/META-INF/persistence.xml -->
<persistence-unit name="articlePU">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>ma.formation.jdbc.service.model.User</class>
    <class>ma.formation.jdbc.service.model.Article</class>
    <properties>
        <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/dbuser"/>
        <property name="javax.persistence.jdbc.user" value="root"/>
        <property name="javax.persistence.jdbc.password" value=""/>
        <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
        <property name="hibernate.hbm2ddl.auto" value="update"/> <!-- CrÃ©e les tables automatiquement -->
    </properties>
</persistence-unit>